<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Transaction_Histories">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/colorPrimaryDark"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/wert"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Histories"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textSize="24sp"
                tools:ignore="RtlCompat" />

            <ImageView
                android:id="@+id/close_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="Close This"
                android:src="@drawable/back"
                app:tint="@color/colorWhite" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtdate"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:background="@drawable/edittext_border"
                    android:gravity="left|center"
                    android:hint="Search Date"
                    android:paddingStart="10dp"
                    android:textSize="18sp"
                    app:drawableStartCompat="@drawable/ic_calendar"
                    app:drawableTint="@color/colorBlack"
                    tools:ignore="RtlHardcoded,RtlSymmetry" />

                <TextView
                    android:id="@+id/fares"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="end"
                    android:background="@drawable/edittext_border"
                    android:gravity="center|left"
                    android:hint="Total Fare"
                    android:paddingStart="10dp"
                    android:textSize="18sp"
                    app:drawableStartCompat="@drawable/peso"
                    app:drawableTint="@color/colorBlack"
                    tools:ignore="RtlHardcoded" />
            </RelativeLayout>

            <ListView
                android:layout_marginTop="5dp"
                android:id="@+id/history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>