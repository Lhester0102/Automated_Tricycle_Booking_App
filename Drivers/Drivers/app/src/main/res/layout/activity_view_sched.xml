<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Schedules.ViewSched">


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="5dp"

        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/wert"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            android:gravity="center_vertical"
            android:text="New Ride"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="24sp"
            tools:ignore="RtlCompat" />

        <ImageView
            android:id="@+id/close_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="Close This"
            android:paddingEnd="5dp"
            android:src="@drawable/back"
            app:tint="@color/colorWhite" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/myview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/relativeLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/l1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/content_bd"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_person_black_24dp"
                    android:visibility="gone"
                    app:civ_border_color="@color/colorPrimaryDark"
                    app:civ_border_width="2dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Transaction ID:"
                        android:textColor="@color/colorBlack"
                        android:textSize="18sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/colorBlack"
                        android:textSize="18sp"
                        android:visibility="gone" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:padding="1dp"
                    android:text="Cutomer's Information"
                    android:textAlignment="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="21sp" />

                <TextView
                    android:id="@+id/SID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="1dp"
                    android:text="Cutomer's Information"
                    android:textAlignment="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="21sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/cname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_border2"
                    android:hint="Cutomer's Name"
                    android:padding="5dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="21sp" />


                <TextView
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_border2"
                    android:hint="Contact Number"
                    android:padding="5dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="21sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/l2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/content_bd"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="Arkila Info"
                    android:textAlignment="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="21sp" />


                <TextView
                    android:id="@+id/stat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_border2"
                    android:hint="STATUS"
                    android:padding="5dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="21sp" />

                <TextView
                    android:id="@+id/frm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_border2"
                    android:hint="Pickup Location"
                    android:padding="5dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="21sp" />


                <TextView
                    android:id="@+id/to"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_border2"
                    android:hint="Destination"
                    android:padding="5dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="21sp" />

                <TextView
                    android:id="@+id/distance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_border2"
                    android:hint="Distance"
                    android:padding="5dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="21sp" />


                <TextView
                    android:id="@+id/fare"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_border2"
                    android:hint="Computed Fare"
                    android:padding="5dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="21sp" />


                <LinearLayout
                    android:id="@+id/setSched"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/dt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_border2"
                        android:hint="Date"
                        android:padding="5dp"
                        android:paddingStart="5dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="21sp" />

                    <TextView
                        android:id="@+id/tm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_border2"
                        android:hint="Time"
                        android:padding="5dp"
                        android:paddingStart="5dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="21sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <ImageView
                        android:id="@+id/idmsg"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_msgs"
                        app:tint="@color/colorBlack" />
                </LinearLayout>
                <Button
                    android:id="@+id/button5"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/custom_button"
                    android:text="Go Pickup"
                    android:textSize="16sp" />
                <Button
                    android:id="@+id/btnAccept"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/custom_button"
                    android:text="Accept Request"
                    android:textSize="16sp" />
                <Button
                    android:id="@+id/button4"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/custom_btn_red"
                    android:text="Cancel Ride"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/inRides"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/content_bd"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/relativeLayout"
        app:layout_constraintStart_toEndOf="@+id/relativeLayout"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

        <TextView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="On the way to pickup Passenger"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:textSize="24sp" />

        <LinearLayout
            android:id="@+id/second"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/content_bd"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:layout_gravity="left"
                app:srcCompat="@drawable/pickupmarkers" />

            <ImageView
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/back_arrow" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:layout_gravity="right"
                app:srcCompat="@drawable/driver_icon" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/third"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/content_bd"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:layout_gravity="left"
                app:srcCompat="@drawable/driver_icon" />

            <ImageView
                android:id="@+id/image5"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/forward_arrow" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:layout_gravity="right"
                app:srcCompat="@drawable/ic_pin_green" />
        </LinearLayout>
        <ImageView
            android:id="@+id/idmsg2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@drawable/ic_msgs"
            app:tint="@color/colorBlack" />
        <Button
            android:id="@+id/btnPickup"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/custom_button"
            android:text="Start Travel"
            android:visibility="gone"
            android:textSize="16sp" />
        <Button
            android:id="@+id/btnComplete"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:visibility="gone"
            android:background="@drawable/custom_button"
            android:text="Complete the Trip"
            android:textSize="16sp" />
        <Button
            android:id="@+id/btncancelRide"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/custom_btn_red"
            android:text="Cancel the Trip"
            android:textSize="16sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>