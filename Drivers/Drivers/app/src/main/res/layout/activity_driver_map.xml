<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/bg2"
    tools:context=".DriverMapActivity">


    <androidx.drawerlayout.widget.DrawerLayout
        android:layout_width="match_parent"
        android:fitsSystemWindows="true"
        tools:openDrawer="start"
        android:id="@+id/drawer"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/app_bar_main"
                />


            <com.mapbox.mapboxsdk.maps.MapView
                android:id="@+id/mapView"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                mapbox:mapbox_cameraTargetLat="38.9098"
                mapbox:mapbox_cameraTargetLng="-77.0295"
                mapbox:mapbox_cameraZoom="15" />

        </LinearLayout>
        <com.google.android.material.navigation.NavigationView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/nav_view"
            android:layout_gravity="start"
            app:headerLayout="@layout/nav_header"
            app:menu="@menu/menu_nav"
            app:theme="@style/NavigationDrawerStyle"
            app:itemIconTint="@color/colorBlack"
            app:itemHorizontalPadding="10dp"
            />

    </androidx.drawerlayout.widget.DrawerLayout>


<!-- bottomsheet -->


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:id="@+id/bottomsheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_sheet_bg"
            android:orientation="vertical"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
            mapbox:layout_constraintBottom_toBottomOf="parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/liniarLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/rel2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/btnAccept"
                        android:layout_margin="8dp"
                        android:background="@drawable/edittext_border"
                        android:visibility="visible">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/profile_image_customer"
                            android:layout_width="120dp"
                            android:layout_height="110dp"
                            android:layout_alignParentStart="true"
                            android:layout_margin="10dp"
                            android:src="@drawable/ic_person_black_24dp"
                            app:civ_border_width="2dp" />

                        <ImageView
                            android:id="@+id/idmsg"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_below="@+id/profile_image_customer"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="5dp"
                            android:layout_toLeftOf="@+id/fare"
                            android:src="@drawable/ic_msgs"
                            mapbox:tint="@color/colorBlack" />

                        <TextView
                            android:id="@+id/msgcount"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_below="@+id/profile_image_customer"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="80dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/bgnotif"
                            android:text="0"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                            android:textStyle="bold"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/idcall"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_below="@+id/profile_image_customer"
                            android:layout_marginTop="2dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="5dp"
                            android:layout_toLeftOf="@+id/fare"
                            android:src="@drawable/ic_call_black_24dp"
                            android:visibility="gone"
                            mapbox:tint="@color/colorBlack" />

                        <TextView
                            android:id="@+id/customer_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_toRightOf="@+id/profile_image_customer"
                            android:drawableStart="@drawable/ic_person"
                            android:drawableTint="@color/colorBlack"
                            android:gravity="center_vertical"
                            android:text="Customer Name"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/customer_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/customer_name"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_toEndOf="@+id/profile_image_customer"
                            android:drawableStart="@drawable/ic_call_black_24dp"
                            android:drawableTint="@color/colorBlack"
                            android:gravity="center_vertical"
                            android:text="Customer  Number"
                            android:textColor="@color/colorBlack" />
                        <TextView
                            android:id="@+id/pickup_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/customer_phone"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="8dp"
                            android:layout_toEndOf="@+id/profile_image_customer"
                            android:drawableStart="@drawable/ic_pin_green"
                            android:drawableTint="@color/colorBlack"
                            android:gravity="center_vertical"
                            android:text="Customer Pickup Location"
                            android:textColor="@color/colorBlack" />

                        <TextView
                            android:id="@+id/destination_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/pickup_text"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="8dp"
                            android:layout_toEndOf="@+id/profile_image_customer"
                            android:drawableStart="@drawable/ic_pin_green"
                            android:drawableTint="@color/colorBlack"
                            android:gravity="center_vertical"
                            android:text="Customer  Destination"
                            android:textColor="@color/colorBlack" />

                        <TextView
                            android:id="@+id/fare"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/destination_text"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="5dp"
                            android:layout_toRightOf="@+id/profile_image_customer"
                            android:drawableStart="@drawable/peso"
                            android:drawableTint="@color/colorBlack"
                            android:gravity="center_vertical"
                            android:text="0.0"
                            android:textColor="@color/colorBlack" />

                        <Button
                            android:id="@+id/openways"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_below="@+id/fare"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"

                            android:layout_toRightOf="@+id/profile_image_customer"
                            android:drawableTop="@drawable/ic_navigation"
                            android:drawableTint="@color/colorBlack" />

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/liniarLayout2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/timerText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/colorAccent"
                                android:textSize="32sp"
                                android:visibility="gone"
                                mapbox:layout_constraintBottom_toBottomOf="parent"
                                mapbox:layout_constraintEnd_toEndOf="parent"
                                mapbox:layout_constraintStart_toStartOf="parent"
                                mapbox:layout_constraintTop_toTopOf="parent" />

                            <ProgressBar
                                android:id="@+id/progressBarCircle"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_centerInParent="true"
                                android:background="@drawable/ring_red"
                                android:indeterminate="false"
                                android:progressDrawable="@drawable/ring_bg"
                                android:rotation="-90"
                                android:visibility="gone"
                                mapbox:layout_constraintBottom_toBottomOf="parent"
                                mapbox:layout_constraintEnd_toEndOf="parent"
                                mapbox:layout_constraintStart_toStartOf="parent"
                                mapbox:layout_constraintTop_toTopOf="parent" />


                        </androidx.constraintlayout.widget.ConstraintLayout>


                    </LinearLayout>


                    <Button
                        android:id="@+id/start_travel"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/custom_button"
                        android:text="Start Travel"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/btnCancel"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/custom_btn_red"
                        android:text="Cancel Ride"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/btndrop"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/custom_button"
                        android:text="Complete the trip"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/go_online"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/custom_button"
                        android:text="Go Online" />

                </LinearLayout>

            </ScrollView>
        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.constraintlayout.widget.ConstraintLayout>


